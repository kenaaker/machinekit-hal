LIBMTALK_DIR := $(MACHINETALK)/lib

# install them in include/
TARGETS += $(addprefix ../include/, \
	bin2ascii.hh  \
	container.h  \
	czmq-watch.h \
	halpb.hh    \
	inihelp.hh \
	json2pb.hh \
	ll-zeroconf.hh   \
	mk-zeroconf-types.h \
	mk-zeroconf.hh    \
	mk-service.hh    \
	pb-hal.h   \
	pbutil.hh       \
	setup_signals.h \
	mk-backtrace.h \
	syslog_async.h )

# protobuf support functions - usable without HAL (eg remotely)
LIBMTALK_SRCS := $(addprefix $(LIBMTALK_DIR)/, \
	pbutil.cc \
	inihelp.cc \
	czmq-watch.c \
	setup_signals.c \
	syslog_async.c \
	ll_zeroconf_register.cc \
	zeroconf_resolve.cc \
	mk_zeroconf.cc \
	mk_service.cc \
	mk_backtrace.c \
	json2pb.cc)

USERSRCS += $(LIBMTALK_SRCS) # $(HALLIBMTALK_SRCS)

SYSLOGASYNC_CFLAGS :=
SYSLOGASYNC_LDFLAGS :=

PB2JSONLIB_CCXFLAGS :=  -shared -Wall -fPIC  $(PROTOBUF_CFLAGS) $(JANSSON_CFLAGS)
PB2JSONLIB_LDFLAGS := $(PROTOCXXLIB) $(JANSSON_LIBS)

LIBMTALK_CXXFLAGS := -DULAPI $(PROTOBUF_CFLAGS) $(CZMQ_CFLAGS) $(UUID_CFLAGS)
LIBMTALK_LDFLAGS := $(PROTOBUF_LIBS) $(CZMQ_LIBS) $(UUID_LIBS)

$(call TOOBJSDEPS, $(LIBMTALK_SRCS)): EXTRAFLAGS=-fPIC \
	$(LIBMTALK_CXXFLAGS) \
	$(AVAHI_CFLAGS) \
	$(CZMQ_CFLAGS) \
	$(SYSLOGASYNC_CFLAGS) \
	$(PB2JSONLIB_CXXFLAGS)

TARGETS += ../lib/libmtalk.so ../lib/libmtalk.so.0

../lib/libmtalk.so.0: $(call TOOBJS, $(LIBMTALK_SRCS)) \
	../lib/libmachinetalk-pb2++.so \
	../lib/libmkini.so.0
	$(ECHO) Linking $(notdir $@)
	@mkdir -p ../lib
	@rm -f $@
	$(CXX) $(LDFLAGS) -g  -Wl,-soname,$(notdir $@) -shared -o $@ $^ \
	$(AVAHI_LIBS) $(CZMQ_LIBS) $(LIBMTALK_LDFLAGS) \
	$(PB2JSONLIB_LDFLAGS)  $(LIBBACKTRACE)

../include/%.h: ./$(MACHINETALK)/include/%.h
	$(ECHO) Copying header file $@
	cp $^ $@

../include/%.hh: ./$(MACHINETALK)/include/%.hh
	$(ECHO) Copying header file $@
	cp $^ $@
