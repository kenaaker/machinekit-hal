    autoconf (>= 2.63),
    automake,
    git,
    lsb-release,
    libgl1-mesa-dev,
    libglu1-mesa-dev,
    libmodbus-dev (>= 3.0),
    libudev-dev,
    libglib2.0-dev,
    libgtk2.0-dev,
    libncurses-dev,
    libreadline-gplv2-dev,
    libusb-1.0-0-dev,
    libxmu-dev,
    libxmu-headers,
    python:native (>= 2.6.6),
    libpython-dev (>= 2.6.6),
    cython:native (>= 0.19),
    dh-python,
    pkg-config,
    psmisc,
    libxaw7-dev,
    libboost-dev,
    libzmq3-dev (>= 4.0.4),
    libczmq-dev (>= 4.0.2),
    libjansson-dev (>= 2.5),
    libwebsockets-dev (>= 1.2.2),
    python-zmq:native (>= 14.0.1),
    procps,
    liburiparser-dev,
    libssl-dev,
    python-setuptools,
    uuid-dev,
    uuid-runtime,
    libavahi-client-dev,
    libprotobuf-dev (>= 2.4.1),
    protobuf-compiler (>= 2.4.1),
    python-protobuf:native (>= 2.4.1),
